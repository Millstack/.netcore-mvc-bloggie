@model Bloggie.Web.Models.ViewModels.EditTagRequest;

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h3>Edit Tag - Admin Functionality</h3>
    </div>
</div>

<div class="container col-md-4 mx-auto rounded-3 shadow-lg py-5 mt-5">
    <div class="container">
        @if (Model != null)
        {
            <form method="post">
                <div class="mb-3">
                    <label class="form-label">Tag ID</label>
                    <input type="text" class="form-control" id="id" asp-for="ID" readonly>
                </div>
                <div class="mb-3">
                    <label class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" asp-for="Name">
                </div>
                <div class="mb-3">
                    <label class="form-label">Display Name</label>
                    <input type="text" class="form-control" id="displayName" asp-for="DisplayName">
                </div>
                <div class="d-flex">
                    <button type="submit" class="btn btn-dark mt-2">Update</button>

                    <button type="submit" class="btn btn-danger mt-2 ms-3" asp-area="" asp-controller="AdminTags" asp-action="Delete">
                        Delete
                    </button>
                </div>
            </form>
        }
        else
        {
            <p>Tag not found !</p>
        }

    </div>
</div>