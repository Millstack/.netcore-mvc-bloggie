@{
}

@model Bloggie.Web.Models.ViewModels.RegisterViewModel

<div class="col-md-4 px-4 py-3 mt-5 mx-auto shadow rounded-3">
    <div class="">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <h1 class="mb-3 mt-3 h3">Register</h1>
                <form method="post">
                    <div class="mb-lg-3">
                        <label class="form-label">User Name:</label>
                        <input type="text" id="username" class="form-control" asp-for="Username" required />
                        <span class="text-danger" asp-validation-for="Username"></span>
                    </div>
                    <div class="mb-lg-3">
                        <label class="form-label">Email:</label>
                        <input type="email" id="email" class="form-control" asp-for="Email" required />
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="mb-lg-3">
                        <label class="form-label">Password:</label>
                        <input type="password" id="password" class="form-control" asp-for="Passowrd" required minlength="6" />
                        <span class="text-danger" asp-validation-for="Passowrd"></span>
                    </div>
                    <div class="mb-3 mt-3">
                        <button type="submit" class="btn btn-dark">Register</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

